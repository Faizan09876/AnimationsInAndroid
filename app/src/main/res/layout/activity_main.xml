<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txthello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="70dp"
        android:background="#E452A0"
        android:text="Hello World!"
        android:textColor="#263238"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imglion"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/texthi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:alpha="0"
        android:background="#F13D3D"
        android:text="Hi World"
        android:textColor="#231D1D"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imglion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <ImageView
        android:id="@+id/imglion"
        android:layout_width="249dp"
        android:layout_height="171dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lion" />

    <ImageView
        android:id="@+id/imgleopard"
        android:layout_width="275dp"
        android:layout_height="168dp"
        android:layout_marginStart="80dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/leopard" />

    <TextView
        android:id="@+id/txtAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ED903D"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:text="Professional Android App Developer"
        android:textColor="#1C2EE1"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imgleopard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthello" />

    <Button
        android:id="@+id/btnAnimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bring UI Components"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAndroid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthello" />


</androidx.constraintlayout.widget.ConstraintLayout>